#!/usr/bin/env node

var util = require('util');
var argv = require('optimist').argv;
var jsbundles3 = require('../index');

if (argv.help || !argv._[0]) {
  util.puts('usage:\n\t[JSBUNDLE_ENV=env] jsbundle-s3 <node_package_dir> [--bundle-version=version]');
} else if (argv.version) {
  util.puts(JSON.parse(fs.readFileSync(__dirname + '/../package.json', 'utf-8')).version);
} else {
  jsbundles3.createBundle(argv._[0], process.env.JSBUNDLE_ENV, argv['bundle-version']);
}

